---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/react/Navbar.tsx';
import ThreeBackground from '../../components/react/ThreeBackground.tsx';
import Hero from '../../components/astro/Hero.astro';
import SectionDivider from '../../components/astro/SectionDivider.astro';
import Ecosystem from '../../components/astro/Ecosystem.astro';
import Crowdfunding from '../../components/astro/Crowdfunding.astro';
import Presale from '../../components/react/Presale.tsx';
import Staking from '../../components/react/Staking.tsx';
import Contact from '../../components/react/Contact.tsx';
import Footer from '../../components/astro/Footer.astro';
import AiModal from '../../components/react/AiModal.tsx';
import WhitepaperModal from '../../components/react/WhitepaperModal.tsx';

const lang = 'fr';
---

<BaseLayout lang={lang}>
  <ThreeBackground client:only="react" />
  <Navbar client:load />
  <AiModal client:load />
  <WhitepaperModal client:load />

  <main>
    <Hero lang={lang} />
    <Presale client:visible />
    <Staking client:visible />
    <SectionDivider />
    <Ecosystem lang={lang} />
    <SectionDivider />
    <Crowdfunding lang={lang} />
    <Contact client:visible />
  </main>

  <Footer lang={lang} />
</BaseLayout>

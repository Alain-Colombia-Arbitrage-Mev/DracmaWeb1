---
import { getTranslationsForLang } from '../../i18n/utils';
import { MEMBERSHIP_TIERS_DATA } from '../../data/constants';
import AiButton from '../react/AiButton.tsx';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = getTranslationsForLang(lang);
---

<section id="membership" class="py-16 bg-brand-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold mb-4 title-section-display brand-accent-gold-text">
        {t['membershipTitle'] || 'Membership'}
      </h2>
      <div class="w-28 h-1.5 bg-gradient-to-r from-brand-accent-gold to-brand-primary mx-auto mb-8 rounded-full"></div>
      <p class="text-lg md:text-xl text-brand-text-secondary max-w-4xl mx-auto leading-relaxed">
        {t['membershipSubtitle'] || ''}
      </p>
      <div class="mt-8">
        <AiButton
          client:visible
          titleKey="aiModalTitleMembership"
          promptTemplate={`Soy un inversor interesado en DRACMA. DRACMA ofrece tres niveles de membresia: CORE (acceso esencial, 5% bonus staking), QUANTUM (beneficios premium, acceso temprano a RWA, 10% bonus staking), y PHOTON (experiencia elite, acceso VIP global, 15% bonus staking, concierge). Basado en los principios de DRACMA de innovacion, inversion en activos reales y gobernanza comunitaria, que tipo de inversor se beneficiaria mas de cada nivel? Proporciona una breve recomendacion para cada uno (1-2 frases por nivel). Responde de forma amigable, profesional y facil de entender. Idioma de la respuesta: {lang}.`}
          buttonTextKey="btnRecommendMembership"
          iconClass="fas fa-user-check"
          className="btn-ai-feature text-base"
        />
      </div>
    </div>

    <!-- Tier Cards -->
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {MEMBERSHIP_TIERS_DATA.map((tier, index) => (
        <div
          class={`card-ui ${tier.isPopular ? `relative ${tier.shadowClass || ''} ${tier.borderColorClass || ''}` : ''}`}
          style={`animation-delay: ${0.2 * (index + 1)}s; ${tier.isPopular ? 'transform: scale(1.05);' : ''}`}
        >
          {tier.isPopular && tier.popularTagKey && (
            <div class="absolute top-0 right-0 bg-brand-primary text-white text-xs font-bold px-3 py-1.5 transform translate-x-2 -translate-y-2 rotate-12 shadow-md rounded-sm">
              {t[tier.popularTagKey] || tier.popularTagKey}
            </div>
          )}
          <div class={`${tier.gradientClass} py-6 px-8 border-b ${tier.isPopular ? 'border-blue-300/50' : 'border-gray-300'} rounded-t-xl`}>
            <h3 class={`text-2xl font-bold ${tier.textColorClass} font-display`}>
              {t[tier.nameKey] || tier.nameKey}
            </h3>
            <p class={`${tier.isPopular ? 'text-blue-100' : tier.nameKey === 'memberTier3Name' ? 'text-green-100' : 'text-brand-text-secondary'} text-sm`}>
              {t[tier.descKey] || tier.descKey}
            </p>
          </div>
          <div class="p-8">
            <div class={`text-4xl font-bold mb-6 ${tier.nameKey === 'memberTier3Name' ? 'brand-secondary-text' : 'brand-accent-gold-text'}`}>
              {tier.price} <span class="text-lg text-brand-text-secondary/70">{t[tier.priceSuffixKey] || ''}</span>
            </div>
            <ul class="space-y-3 mb-8 text-sm text-brand-text-secondary">
              {tier.features.map((feature) => (
                <li class="flex items-start">
                  <i class={`${feature.iconClass} mt-1 mr-2.5`}></i>
                  <span>{t[feature.key] || feature.key}</span>
                </li>
              ))}
            </ul>
            <button class={tier.buttonClass}>
              {t[tier.buttonKey] || tier.buttonKey}
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Membership Card 3D Flip -->
    <div class="mt-24 text-center">
      <h3 class="text-2xl md:text-3xl font-bold mb-6 title-section-display brand-accent-gold-text">
        {t['membershipCardTitle'] || 'Your DRACMA Card'}
      </h3>
      <p class="text-brand-text-secondary max-w-3xl mx-auto mb-12">
        {t['membershipCardSubtitle'] || ''}
      </p>
      <div class="flex justify-center">
        <div class="membership-card w-96 h-56 mx-auto">
          <div class="membership-card-inner relative w-full h-full">
            <!-- Card Front -->
            <div class="membership-card-front absolute bg-gradient-to-br from-surface-medium to-surface-light p-6 shadow-xl border border-gray-300 flex flex-col justify-between">
              <div class="flex justify-between items-start">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 50" class="h-8 w-auto">
                  <defs>
                    <linearGradient id="cardLogoGradNew2" x1="0%" y1="0%" x2="100%" y2="100%">
                      <stop offset="0%" stop-color="#FBBF24"/>
                      <stop offset="100%" stop-color="#F0E68C"/>
                    </linearGradient>
                  </defs>
                  <text x="0" y="35" font-family="Inter, sans-serif" font-size="30" font-weight="bold" fill="url(#cardLogoGradNew2)">DRACMA</text>
                </svg>
                <span class="text-xs text-brand-text-secondary/70 font-mono">{t['cardType'] || 'QUANTUM'}</span>
              </div>
              <div class="my-auto">
                <img src="https://placehold.co/50x30/2C3E50/F8F9FA?text=Chip" alt="Secure Card Chip" class="w-12 h-8 rounded-md mb-3 border border-gray-400"/>
                <div class="text-xl brand-accent-gold-text font-mono tracking-widest">XXXX XXXX XXXX XXXX</div>
              </div>
              <div class="flex justify-between items-end">
                <div>
                  <div class="text-xs text-brand-text-secondary/70 font-mono">{t['cardHolder'] || 'CARD HOLDER'}</div>
                  <div class="text-sm text-brand-text-primary font-medium font-mono">VISIONARIO</div>
                </div>
                <div class="text-right">
                  <div class="text-xs text-brand-text-secondary/70 font-mono">{t['cardExpires'] || 'EXPIRES'}</div>
                  <div class="text-sm text-brand-text-primary font-medium font-mono">12/20XX</div>
                </div>
                <div class="w-12 h-8 bg-gradient-to-tr from-brand-accent-gold to-brand-primary rounded-md flex items-center justify-center shadow-md">
                  <i class="fas fa-atom text-white text-lg"></i>
                </div>
              </div>
            </div>
            <!-- Card Back -->
            <div class="membership-card-back absolute bg-gradient-to-tl from-surface-medium to-surface-light p-6 shadow-xl border border-gray-300 flex flex-col justify-between">
              <div class="h-10 bg-brand-text-primary/80 mb-4 -mx-6 mt-4"></div>
              <div class="text-right mb-auto">
                <span class="text-xs bg-brand-text-primary text-brand-text-secondary px-2 py-1 rounded-md font-mono">CVV</span>
                <div class="text-right font-mono text-brand-text-primary mt-1 text-lg">XXX</div>
              </div>
              <p class="text-xs text-brand-text-secondary/60 mb-2 text-center font-mono" set:html={(t['cardBackText'] || '').replace(/\n/g, '<br/>')} />
              <div class="flex items-center justify-between mt-2">
                <div class="text-xs text-brand-text-secondary/70 font-mono">
                  <div class="font-semibold">{t['cardBlockchainId'] || 'BLOCKCHAIN ID'}</div>
                  <div>0x0...DRCMA</div>
                </div>
                <i class="fas fa-qrcode text-4xl text-brand-primary"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
